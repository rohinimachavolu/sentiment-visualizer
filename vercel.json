{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/process_text",
      "dest": "backend/main.py"
    },
    {
      "src": "/api/health",
      "dest": "backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "functions": {
    "backend/main.py": {
      "runtime": "python3.9"
    }
  }
}